<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorShare" />
                    <padding android:bottom="5dp" android:left="20dp" android:right="20dp" android:top="5dp" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_reply_white"/>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/ic_reply_gray"/>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorSharePress" />
                    <padding android:bottom="5dp" android:left="20dp" android:right="20dp" android:top="5dp" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>